<div class="container">
    <br>
    <h3>최근 게시물</h3>
    <br>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">카테고리</th>
            <th scope="col">제목</th>
            <th scope="col">글쓴이</th>
            <th scope="col">작성일</th>
            <th scope="col">조회수</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach((post) => { %>
          <tr>
            <th scope="row"><%= post.category %></th>
            <td><a href="#"><%= post.title %></a></td>
            <td><%= post.author %></td>
            <td><%= post.updatedAt.toDateString() %></td>
            <td><%= post.hits %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
</div>